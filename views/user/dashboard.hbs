{{> user}}


<link rel="stylesheet" href="/public/stylesheets/dashboard.css">
   <div class="container">
    <div class="main-body" style="margin-left:12rem ;">
    
          <!-- Breadcrumb -->
          <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="index.html">Home</a></li>
              <li class="breadcrumb-item"><a href="javascript:void(0)">User</a></li>
              <li class="breadcrumb-item active" aria-current="page">User Profile</li>
            </ol>
          </nav>
          <!-- /Breadcrumb -->
    
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                    <div class="mt-3">
                      <h4>{{users.username}}</h4>
                     
                    </div>
                  </div>
                </div>
              </div>
            
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{users.username}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{users.email}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Phone</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{users.phone}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Mobile</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      (320) 380-4539
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Address</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                     {{address.[0].houseName}}, {{address.[0].city}}{{address.[0].street}}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-12">
                      <a class="btn btn-info " href="/edit-profile/{{body._id}}">Edit</a>
                    </div>
                  </div>
                </div>
              </div>



            </div>
            <!-- ========================================================================================================== --> 
     <section class="my-5"> 
       <div class="d-flex justify-content-between"> 
         <h5 class="text-uppercase">Address Management</h5> 
         {{! <div class="btn btn-outline-primary"  onclick="editUser()">Edit</div> }} 
       </div> 
       <hr class="my-3" /> 
       <div class="d-flex flex-wrap"> 
         {{#each address}} 
           <div 
             class="col-10 offset-1 offset-sm-0 col-sm-6 col-md-4 p-2" 
             id="address{{this._id}}" 
           > 
             <div class="rounded border w-100 h-100 p-3"> 
               <div class="d-flex justify-content-between"> 
                 <h5 class="text-dark title">{{this.name}}</h5> 
                 <div 
                   class="d-flex justify-content-between" 
                   style="width: 20%;" 
                 ><a href="/address/edit/{{this._id}}" class="fa-solid fa-pencil text-dark"></a> 
                   <a href="/address/delete/{{this._id}}" 
                     class="fa-solid fa-trash text-danger" 
                   ></a> 
                 </div> 
               </div> 
               <p class="text-muted mb-0 desc">{{this.houseName}}, 
                 {{this.postOffice}} 
                 P.O., 
                 {{this.locality}}, 
                 {{this.city}}, 
                 {{this.landmark}}, Pincode : 
                 {{this.pincode}}</p> 
               <small>Phone : {{this.phone}}</small> 
             </div> 
           </div> 
         {{/each}} 
         <div 
           class="col-10 col-sm-4 col-md-3 p-2 d-flex justify-content-center" 
           style="height: 160px;" 
         > 
           <a href="/address/add" class="m-auto text-decoration-none">+ Add New Address</a> 
         </div> 
       </div> 
     </section> 
   </div> 
 </section>
          </div>

        </div>
    </div>

      