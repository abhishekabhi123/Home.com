
{{>header}}
<div class='chairimage'>

  <span class='awsome'>Awsome furnitures</span>
  <span class='furniture'>awsome furnitures</span>
</div>
<button class='butn'>
  Take This Look
</button>
<div class='icon-div'>
  <img src='/images/Group 97.svg' alt='' class='img-fluid image1' />
  <img src='/images/bedroom.svg' alt='' class='img-fluid image2' />
  <img src='/images/kitchen.svg' alt='' class='img-fluid image3' />
  <img src='/images/bathroom.svg' alt='' class='img-fluid image4' />
  <img src='/images/workspace.svg' alt='' class='img-fluid image5' />
  <img src='/images/accessories.svg' alt='' class='img-fluid image6' />
</div>

<section class='offers'>
  <div class='grid-container'>
    <div class='offer-img'>
    </div>
    <div class='offer-chair'>
    </div>
    <div class='inspiration'>
      Find inspiration. Find profesionals
    </div>
  </div>
</section>
<div class='container'>
  <div class='cards row g-3'>
    <div class='my-4 best'>Best Selling</div>
    {{#each products}}
      <div class='p-2 col-sm-3 ml-3'>
        <div class='card'>
          <img class='card-img-top' src={{this.image}} alt='Card image cap' />
          <div
            class='rounded-circle position-absolute d-flex justify-content-center'
          >
            <p class='m-auto'>75%</p>
          </div>
          <div class='card-body'>
            <h5 class='card-title'>{{this.name}}</h5>
            <p class='card-text'>{{this.price}}</p>
            <a href='#' class='btn btn-primary'>Buy now</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
<div class='explore-div container'>
  <div class='explore-text'>
    Explore Our Products
  </div>
  <div class='row'>
    {{#each most}}
      <div class='card exp-card col-sm-3'>
        <img src='{{this.image}}' class='card-img-top' alt='...' />
        <div class='card-body'>
          <h5 class='card-title'>{{this.name}}</h5>
          <p class='card-text'>{{this.price}}</p>
          <a href='#' class='btn btn-primary'>Go somewhere</a>
        </div>
      </div>
    {{/each}}
  </div>
</div>
