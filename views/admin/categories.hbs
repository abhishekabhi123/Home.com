<section>
  <div class='container'>
    <div class='container'>
      <div class='row'>
        <a href='/admin/add-category' class='mt-5'><div
            class='float-end btn btn-success'
          >Add Category</div></a>
      </div>
    </div>
    <table class='table'>
      <thead>
        <tr>
          <th class='' scope='col'>#</th>
          <th class='' scope='col'>Title</th>
        </tr>
      </thead>
      <tbody>
        {{#each categories}}
          <tr>
            <th class='' scope='row'>{{this.id}}</th>
            <td class=''>{{this.name}}</td>
            <td class=''>
              <a
                class='btn btn-primary'
                href='/admin/edit-category/{{this._id}}'
              >Edit</a>
            </td>
            <td class=''>
              <a
                class='btn btn-danger'
                href='/admin/delete-category/{{this._id}}'
                onclick="return confirm('Are you sure you want to delete {{this.name}} product?');"
              >Delete</a>
            </td>
          </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>