<link rel='stylesheet' href='/stylesheets/styles.css' />
{{>admin_sidebar}}
<section>
	<div class='container'>
		<div class='container'>
			<div class='row'>
				<a href='/admin/add-category' class='mt-5'><div
						class='float-end btn btn-success'
					>Add Category</div></a>
			</div>
		</div>
		<table class='table' style="margin-left: 22rem;">
			<thead>
				<tr>
					
					<th class='' scope='col'>Title</th>
					<th class='' scope='col'>Description

					</th>
				</tr>
			</thead>
			<tbody>
				{{#each categories}}
					<tr>
						
						<td class=''>{{this.name}}</td>
						<td class=''>{{this.description}}</td>
						<td class=''>
							<a
								class='btn btn-primary'
								href='/admin/edit-category/{{this._id}}'
							>Edit</a>
						</td>
						<td class=''>
							<a
								class='btn btn-danger'
								href='/admin/delete-category/{{this._id}}'
								onclick="return confirm('Are you sure you want to delete {{this.name}} product?');"
							>Delete</a>
						</td>
					</tr>
				{{/each}}

			</tbody>
		</table>
	</div>
</section>