<section>
  <div class="container">
    <div class="container">
      <div class="row">
        <a href="/admin/add-product" class="mt-5"><div
            class="float-end btn btn-success"
          >Add Product</div></a>
      </div>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th class="" scope="col">#</th>
          <th class="" scope="col">Title</th>
          <th class="" scope="col">Description</th>
          <th class="" scope="col">Price</th>
          <th class="" scope="col">Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <th class="" scope="row">{{this.id}}</th>
            <td class="">{{this.name}}</td>
            <td class="">{{this.description}}</td>
            <td class="">{{this.price}}</td>
            <td class=""><img
                src="/product-images/{{this._id}}.jpg"
                width="50px"
                alt=""
              /></td>
            <td class="">
              <a class="btn btn-primary" href="/admin/edit-product/{{this._id}}">Edit</a>
            </td>
            <td class=""> 
              <a
                class="btn btn-danger"
                href="/admin/delete-product/{{this._id}}"
                onclick="return confirm('Are you sure you want to delete {{this.name}} product?');"
              >Delete</a>
            </td>
          </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>