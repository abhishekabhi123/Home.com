<section>
  <div class='container'>
    <div class='container'>
      <div class='row'>
        <a href='/admin/add-user' class='mt-5'><div
            class='float-end btn btn-success'
          >Add User</div></a>
      </div>
    </div>
    <table class='table'>
      <thead>
        <tr>
          <th class='' scope='col'>#</th>
          <th class='' scope='col'>Username</th>
          <th class='' scope='col'>Description</th>
          <th class='' scope='col'>Password</th>
          <th class='' scope='col'>Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
          <tr>
            <th class='' scope='row'>{{this.id}}</th>
            <td class=''>{{this.username}}</td>
            <td class=''>{{this.email}}</td>
            <td class=''>{{this.password}}</td>
            {{!-- <td class=""><img
                src="/product-images/{{this._id}}.jpg"
                width="50px"
                alt=""
              /></td> --}}
            <td class=''>
              <a
                class='btn btn-primary m-2'
                href='/admin/edit-user/{{this._id}}'
              >Edit</a>
              <a
                class='btn btn-danger m-2'
                href='/admin/delete-user/{{this._id}}'
                onclick="return confirm('Are you sure you want to delete {{this.name}} user?');"
              >Delete</a>

              {{#if this.isAllowed}}<a
                  class='btn btn-danger m-2'
                  href='/admin/block-user/{{this._id}}'
                  onclick="return confirm('Are you sure you want to block {{this.name}} user?');"
                >Block</a>
              {{else}}<a
                  class='btn btn-danger m-2'
                  href='/admin/block-user/{{this._id}}'
                  onclick="return confirm('Are you sure you want to unblock {{this.name}} user?');"
                >Unblock</a>{{/if}}
            </td>
          </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>