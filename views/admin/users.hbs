
<link rel='stylesheet' href='/stylesheets/styles.css' />


{{> admin_sidebar}}


<section>
  <div class='container'>
    <div class='container'>
      <div class='row'>
        <a href='/admin/add-user' class='mt-5'>
          <div class='float-end btn btn-success'>Add User</div>
        </a>
      </div>
    </div>
    <table class='table' style="border: 1px solid ; margin-top: 5rem;margin-left: 19rem;">
      <thead>
        <tr>

          <th class='' scope='col'>Username</th>
          <th class='' scope='col'>Email</th>

          <th class='' scope='col'>Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}

        <tr>

          <td class=''>{{this.username}}</td>
          <td class=''>{{this.email}}</td>

          {{!-- <td class=""><img
                src="/product-images/{{this._id}}.jpg"
                width="50px"
                alt=""
              /></td> --}}
          <td class=''>
            <a class='btn btn-primary m-2' href='/admin/edit-user/{{this._id}}'>Edit</a>
            <a class='btn btn-danger m-2' href='/admin/delete-user/{{this._id}}'
              onclick="return confirm('Are you sure you want to delete {{this.name}} user?');">Delete</a>

            {{#if this.isAllowed}}<a class='btn btn-danger m-2' href='/admin/block-user/{{this._id}}'
              onclick="return confirm('Are you sure you want to block {{this.name}} user?');">Block</a>
            {{else}}<a class='btn btn-danger m-2' href='/admin/block-user/{{this._id}}'
              onclick="return confirm('Are you sure you want to unblock {{this.name}} user?');">Unblock</a>{{/if}}
          </td>
        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>